<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center">

    <!-- Custom header for the dialog (optional) -->
    <LinearLayout
        android:id="@+id/dialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Custom header content goes here -->
    </LinearLayout>

    <!-- Main message -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A total of $XXX will be deducted..."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Layout for passcode input circles -->
    <LinearLayout
        android:id="@+id/passcodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- The passcode circles will be added dynamically here -->
    </LinearLayout>

    <!-- Attempts remaining message -->
    <TextView
        android:id="@+id/attemptsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have X attempts left"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"/>

</LinearLayout>
