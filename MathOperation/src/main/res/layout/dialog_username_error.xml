<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background"
    android:gravity="center">

    <!-- Header with Logo and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Replace with your app's logo -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/evzone"
        android:contentDescription="App Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="EVzone Pay"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Info Icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="Info Icon"
        app:tint="@android:color/holo_blue_dark" />

    <!-- Info Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="EVzone requires to login to proceed with the Transaction"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <!-- Username Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email/Mobile"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_gravity="start"
        android:layout_marginBottom="4dp" />

    <!-- Username Input Field -->
    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Password Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_gravity="start"
        android:layout_marginBottom="4dp" />

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Forget Password Link -->
    <TextView
        android:id="@+id/text_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:text="Forget Password"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp" />

</LinearLayout>